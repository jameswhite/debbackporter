apt-get install -y debhelper javahelper po4a dh-autoreconf libbz2-dev liblzma-dev libselinux-dev cmake libnspr4-dev \
                   libnss3-dev openjdk-7-jdk libsvrcore-dev junit junit4 libjss-java libldap-java libcommons-codec-java

[ ! -d /opt/local/src/dpkg ] && mkdir -p /opt/local/src/dpkg
apt-get install -y pkg-config flex libncursesw5-dev
(
  cd /opt/local/src/dpkg
  wget -nc http://archive.ubuntu.com/ubuntu/pool/main/d/dpkg/dpkg_1.17.5ubuntu5.3.dsc
  wget -nc http://archive.ubuntu.com/ubuntu/pool/main/d/dpkg/dpkg_1.17.5ubuntu5.3.tar.xz
  dpkg-source -x dpkg_1.17.5ubuntu5.3.dsc
)
( cd /opt/local/src/dpkg/dpkg-1.17.5ubuntu5.3; dpkg-checkbuilddeps 2>&1)
( cd /opt/local/src/dpkg/dpkg-1.17.5ubuntu5.3; debian/rules binary )
dpkg -i /opt/local/src/dpkg/*.deb



